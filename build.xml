<project name="MiniJava" basedir="." default="main">

	<property name="src.dir" value="src"/>
	<property name="lib.dir" value="lib"/>

	<property name="build.dir" value="build"/>
	<property name="classes.dir" value="${build.dir}/classes"/>

	<property name="main-class"  value="MiniJavaParser"/>

	<target name="clean">
		<delete dir="${build.dir}"/>
		<delete file="mjc.jar"/>
	</target>

	<target name="grammar" depends="clean">
        <javacc
                target="${src.dir}/javacc/minijava1.0.jj"
                outputdirectory="${src.dir}"
                javacchome="${lib.dir}"
                debugparser="true" />
    </target>

	<target name="compile" depends="grammar">
		<mkdir dir="${classes.dir}"/>
		<javac srcdir="${src.dir}" destdir="${classes.dir}"/>
	</target>

	<target name="jar" depends="compile">
		<jar destfile="mjc.jar" basedir="${classes.dir}">
			<manifest>
				<attribute name="Main-Class" value="${main-class}"/>
			</manifest>
		</jar>
	</target>

	<target name="run" depends="jar">
		<java jar="${jar.dir}/${ant.project.name}.jar" fork="true"/>
	</target>

	<target name="clean-build" depends="clean,jar"/>

	<target name="test">
		<exec executable="/bin/sh">
			<arg value="./testsuit/run.sh"/>
		</exec>
	</target>

	<target name="clean-test" depends="clean-build,test"/>

	<target name="main" depends="clean,jar,test"/>

</project>